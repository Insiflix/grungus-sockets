{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node16",
    "target": "es6",
    "sourceMap": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": ["es6"],
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "typeRoots": ["./typings", "./node_modules/@types/"]
}
